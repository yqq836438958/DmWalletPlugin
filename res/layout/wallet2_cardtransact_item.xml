<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp" >

    <TextView
        android:id="@+id/wallet_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/wallet_transact_topup"
        android:textColor="@color/wallet_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/wallet_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/wallet_tv_type"
        android:layout_below="@id/wallet_tv_type"
        android:layout_marginTop="4dp"
        android:text="2016-10-10    15:12"
        android:textColor="@color/wallet_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/wallet_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+Â¥12.00"
        android:textColor="@color/wallet_dark"
        android:textSize="28sp" />

</RelativeLayout>