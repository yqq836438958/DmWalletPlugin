<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_cardlistquery"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="查询卡列表"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_opencard"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="开卡"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_cardTopup"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="充值"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_applyfund"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="申请退款"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_cardSwitch"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="设置默认卡片"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_getuserterms"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="获取用户协议"
            android:textSize="18sp" />
        
        <Button
            android:id="@+id/btn_get_bankcards"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="获取银行卡列表"
            android:textSize="18sp" />
        
        <Button
            android:id="@+id/btn_bank_verifyinfo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="验证银行卡信息"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_bank_reqcode"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="请求验证码"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_bank_verifycode"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="校验验证码"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_bank_unbind"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="解绑银行卡"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_get_cardstatus"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="获取卡片状态"
            android:textSize="18sp" />
        
         <Button
            android:id="@+id/btn_datareport"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:text="数据上报"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>