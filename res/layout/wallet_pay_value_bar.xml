<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/pay_value_left_bt"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wallet_payselect_btn_normal"
        android:gravity="center"
        android:textColor="@color/wallet_gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/pay_value_middle_bt"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wallet_payselect_btn_normal"
        android:gravity="center"
        android:textColor="@color/wallet_gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/pay_value_right_bt"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wallet_payselect_btn_select"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>