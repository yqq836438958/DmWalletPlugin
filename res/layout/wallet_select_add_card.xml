<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_overall_background" >

    <com.pacewear.tws.phoneside.wallet.ui.widget.CustomListView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:cacheColorHint="@null"
        android:background="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallet_listview_divider_height"
        android:layout_below="@+id/card_list"
        android:layout_marginStart="@dimen/wallet_listview_divider_margin_left"
        android:background="@color/wallet_listview_divider_color"/>

    <TextView
        android:id="@+id/wallet_select_add_card_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_list"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#80ffffff"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>