<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tws="http://schemas.android.com/apk/res/com.tencent.tws.gdevicemanager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_overall_background" >

    <ImageView
        android:id="@+id/wallet_result_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:src="@drawable/wallet_operate_success"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/wallet_result_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/wallet_select_default_success_prompt"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wallet_result_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wallet_result_caption"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/wallet_select_default_bank_content"
            android:textColor="#80ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wallet_result_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wallet_result_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/wallet_result_retry"
            android:textColor="#46dc5f"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.tencent.tws.assistant.widget.TwsButton
        android:id="@+id/wallet_operation_result_close"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        tws:text="@string/wallet_operation_result_close"
        tws:textColor="#ffffff"
        tws:textSize="14sp" />

</RelativeLayout>