<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_overall_background" >

    <com.tencent.tws.phoneside.walletv2.ui.widget.SimpleCardListItem
        android:id="@+id/lay_default_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_wallet_othercity"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/lay_default_city"
        android:background="#1f1c27"
        android:gravity="center_vertical|start"
        android:paddingEnd="0dp"
        android:paddingStart="20dp"
        android:text="@string/wallet_city_other"
        android:textColor="#80ffffff"
        android:textSize="12sp" />

    <com.tencent.tws.assistant.widget.ListView
        android:id="@+id/lv_citylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wallet_othercity"
        android:background="@null"
        android:cacheColorHint="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wallet_listview_divider_height"
        android:layout_below="@id/lv_citylist"
        android:layout_marginStart="@dimen/wallet_listview_divider_margin_left"
        android:background="@color/wallet_listview_divider_color" />

</RelativeLayout>