<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/wallet2_loading_img"
        android:layout_width="192dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:src="@drawable/panel_card_beijing_little" />

    <com.pacewear.tws.phoneside.wallet.ui2.widget.CardBusinessLoadingView
        android:id="@+id/cardloadingview"
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:layout_below="@+id/wallet2_loading_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tv_loading_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet2_loading_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/wallet_activate_loading"
        android:textColor="@color/wallet_black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/tipLay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_loading_title"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/dot_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:singleLine="true"
            android:text="@string/wallet_loading_notice1"
            android:textColor="@color/wallet_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipLay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tipLay1"
        android:layout_below="@+id/tipLay1"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/dot_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:singleLine="true"
            android:text="@string/wallet_loading_notice2"
            android:textColor="@color/wallet_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipLay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tipLay2"
        android:layout_below="@+id/tipLay2"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:src="@drawable/dot_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:singleLine="true"
            android:text="@string/wallet_loading_notice3"
            android:textColor="@color/wallet_gray"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>