<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tws="http://schemas.android.com/apk/res/com.tencent.tws.gdevicemanager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_overall_background" >

    <ImageView
        android:id="@+id/wallet_result_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/wallet_operate_success" />

    <TextView
        android:id="@+id/wallet_result_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_result_ic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="退款申请已提交"
        android:textColor="@color/wallet_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wallet_result_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_result_caption"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="款项将在 5 个工作日之内退还到你的付款账户"
        android:textColor="@color/wallet_gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/wallet_operation_result_close"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:background="@color/wallet_black"
        android:gravity="center"
        android:text="关闭"
        android:textColor="#ffffffff" />

</RelativeLayout>