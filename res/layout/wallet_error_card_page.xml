<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_overall_background" >

    <com.tencent.tws.phoneside.walletv2.ui.widget.TrafficCardView
        android:id="@+id/wallet_card_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wallet_error_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_card_detail_card"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="卡片信息错误,请联系客服处理"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>