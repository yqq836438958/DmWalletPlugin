<?xml version="1.0" encoding="UTF-8"?>
<project
    name="build_apk_upload"
    default="apk_upload" >
    
    <import file="build_local_path_template.xml"/>

    <property
        name="apk.upload.package_name"
        value="com.tencent.tws.yiya" />
    <property
        name="apk.upload.debug"
        value="0" />
    <property
        name="apk.upload.download_url"
        value="http://res.rom.qq.com/17411/%s.apk?fsname=%s" />
    <property
        name="apk.upload.apkupload_url"
        value="http://10.153.129.175:8080/fileupload/FileUpload?dir=qromapp" />
    <property
        name="apk.upload.sqlupload_url"
        value="${apk.upload.apkupload_url}_sql" />
    <property
        name="apk.upload.softname"
        value="${publish.build.AppSnHead}" />
     <property
        name="apk.plugin.min_version"
        value="2" />
     <property
        name="apk.plugin.max_version"
        value="2" />
      <property
        name="rdm_job_id"
        value="15104" />
      <property
        name="rdm_build_id"
        value="${publish.build.AppBnBuildNo}" />
    <target name="apk_upload" >
        <chmod
            file="./build_apk_upload.sh"
            perm="+x" />

        <exec executable="bash">
            <arg value="build_apk_upload.sh" />
	    <arg value="${apk.upload.debug}" />
	    <arg value="${apk.upload.package_name}" />
	    <arg value="${apk.upload.download_url}" />
	    <arg value="${apk.upload.apkupload_url}" />
	    <arg value="${apk.upload.sqlupload_url}" />
	    <arg value="${apk.upload.softname}" />
	    <arg value="${apk.plugin.min_version}" />
	    <arg value="${apk.plugin.max_version}" />
	    <arg value="${rdm_job_id}" />
        </exec>
    </target>

</project>
